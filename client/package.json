{
  "name": "client-v2",
  "version": "0.1.0",
  "private": true,
  "main": "build/electron.js",
  "scripts": {
    "server": "npm --prefix ../server run dev",
    "client": "react-scripts start",
    "electron": "wait-on http://localhost:3000/ && electron .",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run electron\"",
    "build": "npm run server && npm run client:build"
  },
  "build": {
    "appId": "com.myapp.desktop",
    "files": [
      "build/**/*",
      "client/build/**/*",
      "server.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@ftrack/api": "^1.11.2",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@tailwindcss/cli": "^4.1.8",
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "electron-is-dev": "^3.0.1",
    "ftrack": "^1.0.3",
    "lucide-react": "^0.511.0",
    "mui": "^0.0.1",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.6.1",
    "react-scripts": "5.0.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.4",
    "serve": "^14.2.4",
    "tailwindcss": "^4.1.8",
    "wait-on": "^8.0.3"
  }
}
